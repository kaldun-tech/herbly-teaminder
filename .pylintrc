[MAIN]

# Configuration file for pylintrc

# Specify the minimum Python version to target
py-version=3.7

# Specify the maximum line length
max-line-length=140

# Specify score threshold to be exceeded before program exits with error
fail-under=9.0

[MESSAGES CONTROL]

# Disable the message, report, category or checker with the given id(s). You
# can either give multiple identifiers separated by comma (,) or put this
# option multiple times (only on the command line, not in the configuration
# file where it should appear only once). Use "--disable=all" to
# disable everything first and then re-enable specific checks. For example, to
# run only the similarities checker, use "--disable=all --enable=similarities".
# To run only the classes checker, but have no Warning level messages displayed,
# use "--disable=all --enable=classes --disable=W"

disable=
    attribute-defined-outside-init,
    invalid-name,
    missing-docstring,
    protected-access,
    too-few-public-methods,
    cyclic-import,
    import-error,